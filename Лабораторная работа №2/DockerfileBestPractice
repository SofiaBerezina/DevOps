FROM node:14

RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

RUN useradd -m appuser
USER appuser

WORKDIR /app

COPY package.json package-lock.json /app/

RUN npm install --production

COPY . /app

CMD ["node", "app.js"]

ENV DB_PASSWORD=${DB_PASSWORD}
